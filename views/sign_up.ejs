		.sign_up{
			display: flex;
			border:0;
		}
		input.sign-up-form-input{
			width: 100%;
	    height: 40px;
	    font-size: 18px;
	    border:1px solid grey;
	    padding: 2px 0 2px 8px;
	    border-radius: 4px;
		}
		.sign-up-div-button{
			display: flex;
			flex-direction: column;
			width: 100%;
		}
		.sign-up-div-button button{
			height: 42px;
			background-color: #00bcd4;
			border:1px solid #00bcd4;
			font-size: 18px;
			border-radius: 3px;

		}
		.sign-up-div-button p{
			text-align: center;
    	margin: 3px 0;

		}
		.sign-up-div-button a{font-size: 12px; color:#337CFF;}

		/*=========== Stripe login ============*/
		.stripe_login{
			display: flex;
	    flex-direction: column;
	    border: 1px solid #ccc;
	    border-radius: 5px;
	    background-color: #fff;
		}
		form#stripe_login{
			padding: 10px 35px;
		}
		.stripe_login form{
			display: flex;
	    flex-direction: column;
	    width: 497px;
	    align-items: center;
	    flex-grow: 1;
	    box-sizing: border-box;
		}
		.sign-up-div{
			width: 100%;
		}
		h3{
			text-align: center;
		}
	
