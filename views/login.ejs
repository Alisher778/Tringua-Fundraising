<body>
  <div class="container">
    <h1>Welcome To Tringua Fundraising</h1>
    <div class="login-form">
      <form class="login-form" action="/login" method="get">
        <label>
          <span>Username:</span>
          <input type="text" name= "username" />
        </label>
        <label>
          <span>Password:</span>
          <input type= "password" name="password" />
        </label>

        <div class="actions">
          <input type="submit" value="Login" />
        </div>
        <div class="sign_up">
          <a href="sign_up"><input type="submit" value="Sign up"/></a>
        </div>
      </form>
    </div>
  </div>
</body>
